@page "/chains"
@using StoreManager.Webapp.Client.Components.Shared
@using StoreManager.Webapp.Client.Models.Chain.Command
@using StoreManager.Webapp.Client.Models.Chain.Query
@using StoreManager.Webapp.Client.Services
@rendermode InteractiveWebAssembly
@inject IChainService ChainService
@inject NavigationManager Navigation

<PageTitle>Chains</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Chain Management</h1>
        <button class="btn btn-primary"
                @onclick='() => Navigation.NavigateTo("/chains/create")'
                disabled="@isLoading">
            <i class="bi bi-plus-circle"></i> Create New Chain
        </button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Store Count</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td colspan="6">
                                <div class="skeleton-loading">
                                    <div class="skeleton-line"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading chains...</span>
                </div>
                <p class="text-muted mt-2">Loading chains...</p>
            </div>
        </div>
    }
    else if (chains == null || !chains.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No chains found. Create your first chain to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Store Count</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chain in chains)
                    {
                        <tr>
                            <td><small class="text-muted font-monospace">@chain.Id.ToString().Substring(0, 8)...</small></td>
                            <td>
                                <strong>@chain.Name</strong>
                            </td>
                            <td>
                                @if (chain.StoreCount.HasValue && chain.StoreCount > 0)
                                {
                                    <span class="badge bg-info">@chain.StoreCount stores</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">0 stores</span>
                                }
                            </td>
                            <td>@chain.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@chain.ModifiedOn.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-primary"
                                            @onclick='() => Navigation.NavigateTo($"/chains/{chain.Id}")'
                                            title="View Details">
                                        <i class="bi bi-eye"></i> View
                                    </button>
                                    <button class="btn btn-sm btn-success"
                                            @onclick="() => EditChain(chain.Id)"
                                            title="Edit Chain">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger"
                                            @onclick="() => ShowDeleteConfirmation(chain)"
                                            title="Delete Chain">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<ConfirmationModal IsVisible="showDeleteModal"
                   Title="@modalTitle"
                   Message="@modalMessage"
                   CanConfirm="canDeleteChain"
                   OnConfirm="ConfirmDelete"
                   OnCancel="CancelDelete" />

@code {
    private List<QueryChainDto> chains = new();
    private bool isLoading = true;
    private string? errorMessage = null;

    // Modal state
    private bool showDeleteModal = false;
    private QueryChainDto? chain = null;
    private string modalTitle = string.Empty;
    private string modalMessage = string.Empty;
    private bool canDeleteChain = true;

    protected override async Task OnInitializedAsync()
    {
        // Page renders immediately, then data loads
        await LoadChainsAsync();
    }

    private async Task LoadChainsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            chains = await ChainService.GetAllChainsAsync();
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Failed to connect to the API: {ex.Message}. Please ensure the backend is running.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load chains: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditChain(Guid chainId)
    {
        Navigation.NavigateTo($"/chains/edit/{chainId}");
    }

    private void ShowDeleteConfirmation(QueryChainDto chain)
    {
        this.chain = chain;

        if (chain.StoreCount > 0)
        {
            // Chain has stores - prevent deletion
            modalTitle = "Cannot Delete Chain";
            modalMessage = $"The chain '{chain.Name}' cannot be deleted because it has {chain.StoreCount} store(s) associated with it. " +
                          "Please remove or reassign all stores before deleting this chain.";
            canDeleteChain = false;
        }
        else
        {
            // Chain can be deleted
            modalTitle = "Confirm Deletion";
            modalMessage = $"Are you sure you want to delete the chain '{chain.Name}'? This action cannot be undone.";
            canDeleteChain = true;
        }

        showDeleteModal = true;
    }

    private async Task ConfirmDelete()
    {
        if (chain == null || !canDeleteChain)
            return;

        try
        {
            var deleteRequest = new DeleteChainDto(chain.Id, chain.CreatedOn, chain.ModifiedOn);
            await ChainService.DeleteChainAsync(deleteRequest);

            showDeleteModal = false;
            chain = null;

            // Reload the list
            await LoadChainsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete chain: {ex.Message}";
            showDeleteModal = false;
        }
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        chain = null;
    }
}