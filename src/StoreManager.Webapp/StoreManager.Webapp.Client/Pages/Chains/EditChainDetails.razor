@page "/chains/edit/{chainId:guid}"
@using StoreManager.Webapp.Client.Models.Chain.Command
@using StoreManager.Webapp.Client.Models.Chain.Query
@using StoreManager.Webapp.Client.Services
@rendermode InteractiveWebAssembly
@inject IChainService ChainService
@inject NavigationManager Navigation

<PageTitle>Edit Chain</PageTitle>

<div class="container mt-4">
    <h1>Edit Chain</h1>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (chain == null)
    {
        <div class="alert alert-danger">
            Chain not found.
        </div>
        <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/chains")'>
            Back to Chains
        </button>
    }
    else
    {
        <EditForm Model="updateRequest" OnValidSubmit="HandleSubmit" FormName="editChainForm">
            <DataAnnotationsValidator />

            <!-- Chain Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-link-45deg"></i> Chain Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Chain Name *</label>
                        <InputText class="form-control" @bind-Value="updateRequest.Name" placeholder="Enter chain name" />
                        <ValidationMessage For="() => updateRequest.Name" />
                    </div>
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <strong>Error:</strong> @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-success btn-lg" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <button type="button" class="btn btn-secondary btn-lg" @onclick="Cancel" disabled="@isSaving">
                    Cancel
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter]
    public Guid ChainId { get; set; }

    private QueryChainDto? chain;
    private UpdateChainDto updateRequest = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadChainAsync();
    }

    private async Task LoadChainAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            chain = await ChainService.GetChainByIdAsync(ChainId);

            if (chain != null)
            {
                // Initialize the UpdateChainDto with all required values from the loaded chain
                updateRequest = new UpdateChainDto(
                    chain.Id,
                    chain.Name,
                    chain.CreatedOn,
                    chain.ModifiedOn
                );
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load chain: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = null;
            await ChainService.PutChainAsync(updateRequest);
            Navigation.NavigateTo("/chains");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update chain: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/chains");
    }
}
